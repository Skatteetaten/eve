# --- start/stanza STDOUT
[monitor://./logs/*.log]
disabled = false
followTail = 0
sourcetype = log4j
index = splunkIndex
_meta = environment::podNamespace application::appName nodetype::openshift
host = hostName
# --- end/stanza

